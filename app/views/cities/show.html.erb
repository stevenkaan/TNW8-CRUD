<p>

  <strong>Stadsnaam:</strong>
  <%= @city.city_name %>
</p>


<p>
  <strong>Taal:</strong>
  <%= @city.language %>
</p>
<p>
  <strong>Omschrijving:</strong>
  <%= @city.city_text %>
</p>
<h2>Markers</h2>
<% @city.markers.each do |marker| %>
  <p>
    <strong>Marker:</strong>
    <%= marker.name %>
    <%= link_to 'Edit', edit_marker_path(marker) %>
    <%= link_to 'Delete', marker_path(marker),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>

<h2>Marker toevoegen:</h2>
<%= form_for([@city, @city.markers.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_city_path(@city) %>
<%= link_to 'Back', cities_path %>
