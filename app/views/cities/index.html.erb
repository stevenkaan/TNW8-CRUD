
<h1>Listing Cities</h1>

<a href="cities/new">New city</a>
<br></br>
<table>
  <tr>
    <th>Stadsnaam</th>
    <th>Taal</th>
    <th>Omschrijving</th>
  </tr>

  <% @city.each do |city| %>
    <tr>
      <td><%= city.city_name %></td>
      <td><%= city.language %></td>
      <td><%= city.city_text %></td>
      <td><%= link_to 'Show', city_path(city) %></td>
      <td><%= link_to 'Edit', edit_city_path(city) %></td>
      <td><%= link_to 'Delete', city_path(city),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
