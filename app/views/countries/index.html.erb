<div class="container ">
<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %><span class="close-alert"></span></div>
       <% end %>
		<div class="page-header">
			Kies het land
			<span>
			Waarin u bewerkingingen in wilt voeren,<br/>een stad wilt toevoegen of welke wilt verwijderen.
			</span>
		</div>
		<div  class="country-table weird-table">
			<table>
				<tbody>
				  <% @countries.each do |country| %>
				    <tr>
				      <td class="link" data-href='<%= country_path(country) %>'><%= link_to country.country_name_eng, country_path(country)%>

							</td>
				    </tr>
				  <% end %>
				</tbody>
			</table>
			<%= render 'countries/form' %>
		</div>

	</div>
</div>
